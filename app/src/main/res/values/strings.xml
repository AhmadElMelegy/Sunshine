    <string name="action_settings" translatable="false">Settings</string>
    <string name="refresh_button" translatable="false">Refresh</string>
    <string name="title_activity_detail" translatable="false">DetailActivity</string>

    <string name="pref_location_label" translatable="false">Location</string>
    <string name="pref_location_key" translatable="false">location</string>
